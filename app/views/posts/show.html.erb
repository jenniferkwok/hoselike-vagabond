<%= render partial: "/users/navbar" %>
<style> body{background-image: url("http://i.imgur.com/ff7KmtV.jpg");
    background-size: 100%; }</style>
<div>
  Here is your post about <%= @city.name %>.
<br>
  Title: <%= @post.title %>
<br>
  Content: <%= @post.content %>
  <br>
  <% post_author = User.find(@post.user_id)%>
  Post by <%=post_author.name%>
</div>

<% if @user.id == @post.user_id%>
<a href="/posts/<%=@post.id%>/edit"><button type="button" class="btn btn-default">Edit</button></a>
<button class="btn btn-raised btn-material-deep-orange" data-toggle="modal" data-target="#complete-dialog">Delete</button>
<% elsif @upvoted %>
  You liked this post!!!!!!!!
<% elsif @downvoted %>
  You hated this post!!!!!!!!
<% else %>
  <%= button_to [:upvote, @post], {:class => "btn btn-primary btn-fab btn-raised btn-sm mdi-image-filter-vintage"}  do %>
    like 
  <% end %>
  <%= button_to [:downvote, @post], {:class => "btn btn-warning btn-fab btn-raised btn-sm mdi-image-flash-on"} do %>
     dislike 
  <% end %><% end %>

