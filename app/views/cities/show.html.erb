<%= render partial: "/users/navbar" %>

<style> body{background-image: url("<%= @city.background_img %>");
    background-size: 100%; } .card{background: rgba(0,0,0,.7); color: green; font-weight: bold} .card-content{color: deeppink;}</style>

<div class="container">
      <div class="row">
        <div class="col s12">
          <div class="card citycard">
            <div class="card-image">
              <span class="card-content"><h1><%= @city.name %></h1></span>
              <img src="<%= @city.image %>">
            </div>
            <% if @logged_in %>
            <div class="card-action">
            <br>
            <button class="btn btn-raised btn-material-amber" data-toggle="modal" data-target="#complete-dialog">Create New Post</button>
            </div>
            <br>
            <%else%><%end%>
          </div>
        </div>
      </div>
