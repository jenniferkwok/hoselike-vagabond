<% @posts.reverse.each do |post| %>

<div class="card postcard shadow-z-1">
<h4><% if @logged_in %><a href = "/posts/<%= post.id %>"><%= post.title %></a><%else%><%= post.title %><%end%></h4> <hr>

<p><%= post.content %></p></div>
<% end %>
